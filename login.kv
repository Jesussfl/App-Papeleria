MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1, 1, 1 ,1
        Image:
            source: "assets/logo-papeleria.png"
            size_hint: .26, .26
            pos_hint: {"center_x": .22, "center_y": .8}
        MDLabel:
            text: "Bienvenido"
            font_size: "18sp"
            font_name: "Poppins-Medium.ttf"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .65}
        MDLabel:
            text: "Procede a iniciar sesion"
            font_size: "20sp"
            font_name: "Poppins-Semibold.ttf"
            pos_hint: {"center_x": .6, "center_y": .58}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .42}
            MDLabel:
                text: "Nombre de Usuario"
                font_size: "14sp"
                font_name: "Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
            TextInput:
                size_hint_y: .75
                font_name: "Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                foreground_color: 120/255, 120/255, 120/255, 1
                font_size: "13sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1

        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .28}
            MDLabel:
                text: "Contraseña"
                font_size: "14sp"
                font_name: "Poppins-Medium.ttf"
                pos_hint: {"center_x": .5, "center_y": .9}
            TextInput:
                size_hint_y: .75
                font_name: "Poppins-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "13sp"
                multiline: False
                foreground_color: 120/255, 120/255, 120/255, 1
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 120/255, 120/255, 120/255, 1
        Button:
            text: "Iniciar Sesion"
            background_color: 0, 0, 0, 0
            font_name: "Poppins-Medium.ttf"
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .15}
            canvas.before:
                Color:
                    rgb: 226/255, 0, 48/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]
        MDTextButton:
            text: "Olvide mi contraseña"
            font_size: "13sp"
            pos_hint: {"center_x": .5, "center_y": .07}
            halign: "center"
            color: 120/255, 120/255, 120/255, 1