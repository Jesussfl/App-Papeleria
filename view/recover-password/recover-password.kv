MDScreen:
    name: "recover-password"

    MDGridLayout:
        cols: 1
        padding: 24
        spacing: 32
        size_hint_y: None
        height: root.height
        md_bg_color: 1, 1, 1 ,1

        MDBoxLayout:
            orientation: 'vertical'
            height: 100
            size_hint_y: None
            Image:
                source: "assets/images/logo-papeleria.png"
                size_hint: 1, 1

            MDLabel:
                text: "Introduzca una pregunta de seguridad y su correo electrónico para continuar"
                font_size: "20sp"


        MDBoxLayout:
            orientation: 'vertical'
            spacing: 10
            height: self.minimum_height
            size_hint: 1, None
            MDBoxLayout:
                orientation: 'vertical'
                height: 80
                size_hint: 1, None
                MDLabel:
                    text: "Seleccione una pregunta de seguridad"
                    font_size: "13sp"
                MDExpansionPanelOneLine:
                    text: "Seleccionar"
                    size_hint_y: .80
                    background_color: 0, 0, 0, 0
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    foreground_color: 120/255, 120/255, 120/255, 1
                    font_size: "13sp"


            MDBoxLayout:
                orientation: 'vertical'
                height: 70
                size_hint: 1, None
                MDLabel:
                    text: "Correo electrónico"
                    font_size: "13sp"
                TextInput:
                    size_hint_y: .80
                    background_color: 0, 0, 0, 0
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    foreground_color: 120/255, 120/255, 120/255, 1
                    font_size: "13sp"
                    multiline: False
                MDFloatLayout:
                    size_hint_y: .03
                    md_bg_color: 120/255, 120/255, 120/255, 1


        MDBoxLayout:
            orientation: 'vertical'
            height: 100
            spacing: 10
            size_hint_y: None
            Button:
                text: "Continuar"
                background_color: 0, 0, 0, 0
                height: 50
                size_hint: .79, None
                pos_hint: {"center_x": .5, "center_y": .15}
                canvas.before:
                    Color:
                        rgb: 226/255, 0, 48/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [2]
            MDTextButton:
                text: "Volver"
                font_size: "13sp"
                pos_hint: {"center_x": .5, "center_y": .07}
                halign: "center"
                color: 120/255, 120/255, 120/255, 1
                on_release: root.manager.current = "login"
