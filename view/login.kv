#:kivy 1.0

<Login>:
    MDFloatLayout:
        md_bg_color: 1, 1, 1 ,1
        Image:
            source: "assets/images/logo-papeleria.png"
            size_hint: .26, .26
            pos_hint: {"center_x": .22, "center_y": .9}
        MDLabel:
            text: "Bienvenido"
            font_size: "18sp"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .6, "center_y": .80}
        MDLabel:
            text: "Procede a iniciar sesion"
            font_size: "20sp"
            pos_hint: {"center_x": .6, "center_y": .68}
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .52}
            MDTextField:
                id: inputEmail
                hint_text: "Correo Electrónico"
                pos_hint: {"center_x": .49, "center_y": .4}
                cursor_width: "2sp"
                font_size: "13sp"
                multiline: False
                color_mode: 'custom'
                line_color_focus: 0, 0, 0, 1
                max_text_length: 50

        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .38}
            MDTextField:
                id: inputPassword
                hint_text: "Contraseña"
                pos_hint: {"center_x": .49, "center_y": .4}
                cursor_width: "2sp"
                font_size: "13sp"
                multiline: False
                color_mode: 'custom'
                password: True
                line_color_focus: 0, 0, 0, 1
#            MDTextButton:
#                text: "Olvidé mi contraseña"
#                font_size: "13sp"
#                pos_hint: {"center_x": .8, "center_y": -.6}
#                halign: "center"
#                color: 120/255, 120/255, 120/255, 1
#                on_release: root.manager.current = "recover-password"
        Button:
            text: "Iniciar Sesión"
            background_color: 0, 0, 0, 0
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release:
                root.iniciar_sesion()
            canvas.before:
                Color:
                    rgb: 226/255, 0, 48/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]
        MDTextButton:
            text: "No tengo una cuenta"
            font_size: "13sp"
            pos_hint: {"center_x": .5, "center_y": .07}
            halign: "center"
            color: 120/255, 120/255, 120/255, 1
            on_release: root.manager.current = "signup"