<Inventario>:
    name: "inventario"
    MDGridLayout:
        cols: 1
        size_hint_y: None
        height: root.height
        md_bg_color: 1, 1, 1, 1
        MDTopAppBar:
            id: toolbar
            title: 'Inventario'
            elevation: 1
            pos_hint: {'center_x': 0.5, 'center_y': 1}
            md_bg_color: 255/255, 230/255, 0/255, 1
            font_size: '10sp'
            specific_text_color: 0, 0, 0, .8
            left_action_items: [["clipboard-list-outline", "Inventario"]]
            right_action_items: [["plus", lambda _: setattr(app.manager, 'current', 'agregarProducto'), "AÃ±adir Producto"]]
        ScrollView:
            size_hint_y: None
            height: root.height - toolbar.height
            MDGridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: 0, 0, 0, 500
                BoxLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    padding: 24, 24, 24, 12
                    spacing: 12

                    MDTextField:
                        id: inputBuscar
                        hint_text: "Buscar Producto..."
                        pos_hint: {"center_x": .49, "center_y": .4}
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        icon_left: 'magnify'
                        fill_color: 120/255, 120/255, 120/255, .03
                        on_text: root.buscar_producto()
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 12
                        MDLabel:
                            id: cantidadProductos
                            font_size: "13sp"
                        Button:
                            text: "Precio del dolar"
                            background_color: 0, 0, 0, 0
                            height: 32
                            size_hint: .74, None
                            canvas.before:
                                Color:
                                    rgb: 226/255, 0, 48/255, 1
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [2]
                            on_release: root.abrir_precio_dolar()
                MDGridLayout:
                    id: listContainer
                    cols: 1
                    padding: 0, 10, 0, 0
                    size_hint_y: None
                    height: root.height
                    md_bg_color: 120/255, 120/255, 120/255, .04
        MDFloatLayout:
            pos_hint: {'center_x': .5, 'center_y': 1}
            MDBottomNavigation:
                id: bottomNavigation
                panel_color: "#eeeaea"
                selected_color_background: "red"
                text_color_active: "red"

                MDBottomNavigationItem:
                    icon: 'home-outline'
                    name: 'catalogo-screen'
                    on_tab_press: app.manager.current = "catalogo"

                MDBottomNavigationItem:
                    name: 'inventario-screen'
                    icon: 'clipboard-list-outline'
                    on_tab_press: app.manager.current = "inventario"

                MDBottomNavigationItem:
                    name: 'perfil-screen'
                    icon: 'account-circle-outline'
                    on_tab_press: app.manager.current = "perfil"

