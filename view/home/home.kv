#:import NoTransition kivy.uix.screenmanager.NoTransition
MDScreen:
    name: "homeScreen"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        ScreenManager:
            id: scr
            transition: NoTransition()
            Catalogo:
            Perfil:
            Inventario


        NavBar:
            size_hint: .7, .1
            pos_hint: {"center_x": .5, "center_y": .1}
            elevation: 2
            md_bg_color: 1, 1, 1, 1
            radius: [16]
            MDGridLayout:
                cols: 4
                size_hint_x: .77
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                MDIconButton:
                    id: nav_icon0
                    icon: "home"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    on_release:
                        scr.current = "catalogo"
                        app.change_color(self)
                MDIconButton:
                    id: nav_icon1
                    icon: "home"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    on_release:
                        scr.current = "inventario"
                        app.change_color(self)
                MDIconButton:
                    id: nav_icon2
                    icon: "home"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    on_release:
                        scr.current = "perfil"
                        app.change_color(self)
                MDIconButton:
                    id: nav_icon3
                    icon: "home"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    on_release:
                        app.change_color(self)

