<EditarProducto>:
    name: 'editarProducto'
    MDGridLayout:
        cols: 1
        size_hint_y: None
        height: root.height
        md_bg_color: 1, 1, 1, 1
        MDTopAppBar:
            id: toolbar
            title: 'Editar Producto'
            elevation: 1
            pos_hint: {'center_x': 0.5, 'center_y': 1}
            md_bg_color: 255/255, 230/255, 0/255, 1
            font_size: '10sp'
            specific_text_color: 0, 0, 0, .8
            left_action_items: [["arrow-left", lambda _: setattr(app.manager, 'current', 'inventario'), "Volver"]]
        ScrollView:
            MDGridLayout:
                cols: 1
                padding: 24
                spacing: 10
                pos_hint: {"center_x": .5, "center_y": 1}
                size_hint_y: None
                height: self.minimum_height
                md_bg_color: 1, 1, 1 ,1

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    height: self.minimum_height
                    size_hint: 1, None
                    MDTextField:
                        id: inputCodigo
                        hint_text: "Código"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        input_filter: 'int'
                        disabled: True
                        line_color_focus: 0, 0, 0, .3
                    MDTextField:
                        id: inputNombreProducto
                        hint_text: "Nombre del Producto"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                    MDTextField:
                        id: inputDescripcion
                        hint_text: "Descripción del producto (Opcional)"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                    MDTextField:
                        id: inputCantidad
                        hint_text: "Cántidad Disponible"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        input_filter: 'int'
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                    MDTextField:
                        id: inputTipoPrecio
                        hint_text: "Seleccione la Moneda"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                        on_focus: if self.focus: root.menu.open()
                    MDTextField:
                        id: inputPrecio
                        hint_text: "Precio"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        input_filter: 'float'
                        line_color_focus: 0, 0, 0, .3
                        helper_text: "Seleccione el tipo de moneda"
                        disabled: True
                    MDTextField:
                        id: inputMarca
                        hint_text: "Marca del Producto"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                    MDTextField:
                        id: inputImagen
                        hint_text: "Imagen del Producto"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                        on_focus: root.open_file_manager()


                MDBoxLayout:
                    orientation: 'vertical'
                    height: 80
                    spacing: 10
                    size_hint_y: None
                    Button:
                        text: "Editar Producto"
                        background_color: 0, 0, 0, 0
                        height: 50
                        size_hint: .79, None
                        pos_hint: {"center_x": .5, "center_y": .15}
                        canvas.before:
                            Color:
                                rgb: 226/255, 0, 48/255, 1
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [2]
                        on_release: root.editar_producto()
