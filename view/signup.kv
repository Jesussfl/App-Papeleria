#:kivy 1.0

<Signup>:
    ScrollView:
        MDGridLayout:
            cols: 1
            padding: 24
            spacing: 10
            pos_hint: {"center_x": .5, "center_y": 1}
            size_hint_y: None
            height: self.minimum_height
            md_bg_color: 1, 1, 1 ,1

            MDBoxLayout:
                orientation: 'vertical'
                height: 100
                size_hint_y: None
                Image:
                    source: "assets/images/logo-papeleria.png"
                    size_hint: 1, 1

                MDLabel:
                    text: "Bienvenido, cree su nueva cuenta"
                    font_size: "20sp"

            MDBoxLayout:
                orientation: 'vertical'
                spacing: 10
                height: self.minimum_height
                size_hint: 1, None

                MDTextField:
                    id: inputFullName
                    hint_text: "Nombre y Apellido"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, .3
                    on_focus: if root.validar_nombre_completo(self) == False: self.text = ""
                MDTextField:
                    id: inputPhone
                    hint_text: "Teléfono"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    color_mode: 'custom'
                    input_filter: 'int'
                    line_color_focus: 0, 0, 0, .3
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    height: self.minimum_height
                    size_hint: 1, None
                    MDTextField:
                        id: menu_
                        elevation: 0
                        hint_text: "Tipo de documento"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, .3
                        on_focus: if self.focus: root.menu.open()
                    MDTextField:
                        id: inputDNI
                        hint_text: "N° Cédula o Rif"
                        cursor_width: "2sp"
                        font_size: "13sp"
                        multiline: False
                        color_mode: 'custom'
                        input_filter: 'int'
                        line_color_focus: 0, 0, 0, .3
                MDTextField:
                    id: inputAddress
                    hint_text: "Dirección"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, .3
                MDTextField:
                    id: inputSex
                    hint_text: "Sexo"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, .3
                    on_focus: if self.focus: root.menu2.open()
                MDTextField:
                    id: inputEmail
                    hint_text: "Correo Electrónico"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, .3
                    helper_text: "user@gmail.com"
                    validator: 'email'
                MDTextField:
                    id: inputPassword
                    hint_text: "Contraseña"
                    cursor_width: "2sp"
                    font_size: "13sp"
                    multiline: False
                    password: True
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, .3


            MDBoxLayout:
                orientation: 'vertical'
                height: 100
                spacing: 10
                size_hint_y: None
                Button:
                    text: "Registrarme"
                    background_color: 0, 0, 0, 0
                    height: 50
                    size_hint: .79, None
                    pos_hint: {"center_x": .5, "center_y": .15}
                    canvas.before:
                        Color:
                            rgb: 226/255, 0, 48/255, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [2]
                    on_release: root.registrar_usuario()
                MDTextButton:
                    text: "Ya tengo una cuenta"
                    font_size: "13sp"
                    pos_hint: {"center_x": .5, "center_y": .07}
                    halign: "center"
                    color: 120/255, 120/255, 120/255, 1
                    on_release: root.manager.current = "login"
